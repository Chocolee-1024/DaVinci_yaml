openapi: 3.0.0
info:
  title: Weather API - 未來天氣查詢
  description: 查詢某城市未來天氣預報
  version: 1.0.0
servers:
  - url: https://api.weatherapi.com/v1
    description: WeatherAPI 伺服器
paths:
  /forecast.json:
    get:
      summary: 查詢某城市的未來天氣預報
      description: 根據城市名稱查詢未來天氣數據
      parameters:
        - name: key
          in: query
          required: true
          description: WeatherAPI 提供的 API 金鑰
          schema:
            type: string
            example: 這裡放你的 API key 
        - name: q
          in: query
          required: true
          description: 城市名稱或緯度、經度（例如："Taipei" 或 "24.14,120.68"）
          schema:
            type: string
        - name: days
          in: query
          required: true
          description: 查詢未來幾天的天氣數據（1-10 天）
          schema:
            type: integer
            example: 3
        - name: dt
          in: query
          required: false
          description: 特定日期（yyyy-MM-dd 格式）來查詢未來某一天的天氣
          schema:
            type: string
            format: date
            example: "2024-09-25"
        - name: aqi
          in: query
          required: false
          description: 是否查詢空氣質量指數，預設為 "no"
          schema:
            type: string
            enum:
              - no
              - yes
        - name: alerts
          in: query
          required: false
          description: 是否查詢天氣警報，預設為 "no"
          schema:
            type: string
            enum:
              - no
              - yes
      responses:
        '200':
          description: 成功返回未來天氣數據
          content:
            application/json:
              schema:
                type: object
                properties:
                  location:
                    type: object
                    properties:
                      name:
                        type: string
                        description: 城市名稱
                      country:
                        type: string
                        description: 國家名稱
                      lat:
                        type: number
                        description: 緯度
                      lon:
                        type: number
                        description: 經度
                      localtime:
                        type: string
                        description: 當地時間
                  forecast:
                    type: object
                    properties:
                      forecastday:
                        type: array
                        items:
                          type: object
                          properties:
                            date:
                              type: string
                              description: 預報日期
                            day:
                              type: object
                              properties:
                                maxtemp_c:
                                  type: number
                                  description: 最高溫度（攝氏）
                                mintemp_c:
                                  type: number
                                  description: 最低溫度（攝氏）
                                avgtemp_c:
                                  type: number
                                  description: 平均溫度（攝氏）
                                condition:
                                  type: object
                                  properties:
                                    text:
                                      type: string
                                      description: 天氣狀況描述
