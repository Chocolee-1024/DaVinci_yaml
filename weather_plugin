openapi: 3.0.0
info:
  title: Weather API - 未來天氣查詢
  description: 查詢某城市未來天氣預報
  version: 1.0.0
servers:
  - url: https://davinci-weather.nutc-imac.com/api/v1
    description: WeatherAPI 伺服器
paths:
  /weather:
    post:
      summary: 查詢某城市的未來天氣預報
      description: 根據城市名稱查詢未來天氣數據
      requestBody:
        required: true
        content:
          application/json:
            schema:
              type: object
              properties:
                q:
                  type: string
                  description: 城市名稱或緯度、經度（例如："Taipei" 或 "24.14,120.68"）
                  example: "Taipei"
                days:
                  type: integer
                  description: 查詢未來幾天的天氣數據（1-10 天）
                  example: 3
                dt:
                  type: string
                  format: date
                  description: 特定日期（yyyy-MM-dd 格式）來查詢未來某一天的天氣
                  example: "2024-09-25"
                aqi:
                  type: string
                  description: 是否查詢空氣質量指數，預設為 "no"
                  enum:
                    - no
                    - yes
                  example: "no"
                alerts:
                  type: string
                  description: 是否查詢天氣警報，預設為 "no"
                  enum:
                    - no
                    - yes
                  example: "no"
      responses:
        '200':
          description: 成功返回未來天氣數據
          content:
            application/json:
              schema:
                type: object
                properties:
                  location:
                    type: object
                    properties:
                      name:
                        type: string
                        description: 城市名稱
                      region:
                        type: string
                        description: 區域名稱
                      country:
                        type: string
                        description: 國家名稱
                      lat:
                        type: number
                        description: 緯度
                      lon:
                        type: number
                        description: 經度
                      tz_id:
                        type: string
                        description: 時區 ID
                      localtime_epoch:
                        type: integer
                        description: 當地時間的 Epoch 值
                      localtime:
                        type: string
                        description: 當地時間
                  forecast:
                    type: object
                    properties:
                      forecastday:
                        type: array
                        items:
                          type: object
                          properties:
                            date:
                              type: string
                              description: 預報日期
                            date_epoch:
                              type: integer
                              description: 預報日期的 Epoch 值
                            day:
                              type: object
                              properties:
                                maxtemp_c:
                                  type: number
                                  description: 最高溫度（攝氏）
                                mintemp_c:
                                  type: number
                                  description: 最低溫度（攝氏）
                                avgtemp_c:
                                  type: number
                                  description: 平均溫度（攝氏）
                                maxwind_mph:
                                  type: number
                                  description: 最大風速（英里/小時）
                                maxwind_kph:
                                  type: number
                                  description: 最大風速（公里/小時）
                                totalprecip_mm:
                                  type: number
                                  description: 降水量（毫米）
                                totalprecip_in:
                                  type: number
                                  description: 降水量（英吋）
                                totalsnow_cm:
                                  type: number
                                  description: 降雪量（公分）
                                avgvis_km:
                                  type: number
                                  description: 平均能見度（公里）
                                avgvis_miles:
    
