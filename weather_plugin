openapi: 3.0.0
info:
  title: Amadeus API Token
  description: 使用 API Key 和 Secret 獲取 OAuth2 Access Token
  version: 1.0.0
servers:
  - url: https://test.api.amadeus.com
    description: Amadeus 測試伺服器

paths:
  /v1/security/oauth2/token:
    post:
      summary: 獲取 OAuth2 Access Token
      description: 使用 API Key 和 Secret 獲取 Access Token
      requestBody:
        content:
          application/x-www-form-urlencoded:
            schema:
              type: object
              properties:
                client_id:
                  type: string
                  description: API Key
                  example: VYtznfANezZ9Saswf3f9FGrT8vSP5Cgu
                client_secret:
                  type: string
                  description: API Secret
                  example: rpDfmy7lQeelyIq9
                grant_type:
                  type: string
                  description: OAuth2 grant type
                  example: client_credentials
      responses:
        '200':
          description: 成功返回 Access Token
          content:
            application/json:
              schema:
                type: object
                properties:
                  access_token:
                    type: string
                  expires_in:
                    type: integer
                  token_type:
                    type: string
        '400':
          description: 請求錯誤
        '401':
          description: 授權失敗
