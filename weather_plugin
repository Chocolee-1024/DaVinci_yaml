openapi: 3.0.0
info:
  title: TDX Taiwan Airports Plugin
  description: 查詢台灣的所有機場資訊
  version: 1.0.0
  contact:
    name: Developer
    email: your-email@example.com

# 授權方式，使用 API Key
components:
  securitySchemes:
    apiKeyAuth:
      type: apiKey
      in: header
      name: authorization

security:
  - apiKeyAuth: []

# 定義 API 路徑
paths:
  /airports:
    get:
      summary: 查詢台灣的機場資訊
      description: 查詢台灣所有機場的詳細資訊
      operationId: getAirports
      responses:
        '200':
          description: 成功返回機場資料
          content:
            application/json:
              schema:
                type: object
                properties:
                  Airports:
                    type: array
                    items:
                      type: object
                      properties:
                        AirportID:
                          type: string
                          description: 機場的代碼
                        AirportName:
                          type: object
                          properties:
                            Zh_tw:
                              type: string
                              description: 機場的中文名稱
                            En:
                              type: string
                              description: 機場的英文名稱
                        CityName:
                          type: object
                          properties:
                            Zh_tw:
                              type: string
                              description: 城市的中文名稱
                            En:
                              type: string
                              description: 城市的英文名稱
        '401':
          description: 未授權
        '500':
          description: 伺服器錯誤

# 伺服器端點
servers:
  - url: https://tdx.transportdata.tw/api/basic/v2/Air/Airports
    description: TDX 機場資訊 API 伺服器
