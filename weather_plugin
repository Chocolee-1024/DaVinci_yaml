openapi: 3.0.0
info:
  title: TDX Airport Information Plugin
  description: 查詢特定台灣機場的詳細資訊
  version: 1.0.0
  contact:
    name: Developer
    email: your-email@example.com

# API 授權方式
components:
  securitySchemes:
    apiKeyAuth:
      type: apiKey
      in: header
      name: authorization

security:
  - apiKeyAuth: []

# 定義 API 路徑
paths:
  /airport/{AirportID}:
    get:
      summary: 查詢特定機場的詳細資訊
      description: 根據機場代碼查詢機場的資訊
      operationId: getAirportByID
      parameters:
        - name: AirportID
          in: path
          required: true
          description: 機場的三字代碼，例如 TPE、TSA
          schema:
            type: string
      responses:
        '200':
          description: 成功返回機場資料
          content:
            application/json:
              schema:
                type: object
                properties:
                  AirportID:
                    type: string
                    description: 機場的代碼
                  AirportName:
                    type: object
                    properties:
                      Zh_tw:
                        type: string
                        description: 機場的中文名稱
                      En:
                        type: string
                        description: 機場的英文名稱
                  CityName:
                    type: object
                    properties:
                      Zh_tw:
                        type: string
                        description: 城市的中文名稱
                      En:
                        type: string
                        description: 城市的英文名稱
                  Location:
                    type: object
                    properties:
                      Latitude:
                        type: number
                        format: float
                        description: 機場的緯度
                      Longitude:
                        type: number
                        format: float
                        description: 機場的經度
                  IATA:
                    type: string
                    description: IATA 代碼
                  ICAO:
                    type: string
                    description: ICAO 代碼
        '401':
          description: 未授權
        '404':
          description: 找不到指定的機場
        '500':
          description: 伺服器錯誤

# 伺服器端點
servers:
  - url: https://tdx.transportdata.tw/api/basic/v2/Air/Airport
    description: TDX 特定機場資訊 API 伺服器
